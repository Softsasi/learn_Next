generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
  PARENT
  ADMIN
}

enum AccountStatus {
  PENDING
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum LoginAttemptStatus {
  SUCCESS
  FAILED
}

enum VerificationCodeType {
  ACCOUNT_ACTIVATION
  PASSWORD_RESET
  EMAIL_CHANGE
  PHONE_CHANGE
  TWO_FACTOR_AUTH
  TWO_FACTOR_AUTH_DISABLE
}

enum VerificationStatus {
  PENDING
  VERIFIED
  EXPIRED
  USED
}

/**
 * ============================== ==============================
 * VerificationCoded Model
 * ============================== ==============================
 */
model VerificationCode {
  id         String               @id @default(auto()) @map("_id") @db.ObjectId
  status     VerificationStatus   @default(PENDING)
  userId     String               @db.ObjectId
  user       AuthUser             @relation(fields: [userId], references: [id], onDelete: Cascade)
  code       String
  type       VerificationCodeType @default(ACCOUNT_ACTIVATION)
  issuedAt   DateTime             @default(now())
  expiresAt  DateTime
  verifiedAt DateTime?
}

/**
 * ============================== ==============================
 * LoginHistory Model
 * ============================== ==============================
 */
model LoginHistory {
  id        String             @id @default(auto()) @map("_id") @db.ObjectId
  user      AuthUser           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String             @db.ObjectId
  ipAddress String?
  userAgent String?
  attempt   LoginAttemptStatus @default(SUCCESS)
  loginAt   DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  createdAt DateTime           @default(now())
}

/**
 * ============================== ==============================
 * User Model
 * ============================== ==============================
 */
model UserProfile {
  id               String            @id @default(auto()) @map("_id") @db.ObjectId
  firstName        String
  lastName         String
  bio              String?
  dob              DateTime?
  phone            String?
  address          String?
  avatarUrl        String?
  avatarPublicId   String?
  authUser         AuthUser          @relation(fields: [id], references: [id])
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  posts            Post[]
  comments         Comment[]
  commentReactions CommentReaction[]
  postReactions    PostReaction[]
  postBookmarks    PostBookmark[]
}

/**
 * ============================== ==============================
 * AuthUser Model
 * ============================== ==============================
 */
model AuthUser {
  id                String             @id @default(auto()) @map("_id") @db.ObjectId
  email             String             @unique
  password          String?
  role              Role               @default(STUDENT)
  verified          Boolean            @default(false)
  status            AccountStatus      @default(PENDING)
  provider          String             @default("local")
  providerId        String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  user              UserProfile?       @relation
  loginHistories    LoginHistory[]
  verificationCodes VerificationCode[]
}

/**
 * ============================== ==============================
 * Post Model
 * ============================== ==============================
 */
model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  published Boolean  @default(false)
  thumbnail String?
  tags      String[]
  slug      String   @unique
  imageUrls String[] @default([])

  author    UserProfile? @relation(fields: [authorId], references: [id])
  authorId  String?      @db.ObjectId
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  likeCount     Int            @default(0)
  commentCount  Int            @default(0)
  viewCount     Int            @default(0)
  comments      Comment[]
  postReactions PostReaction[]
  postBookmarks PostBookmark[]

  @@index([authorId])
}

model PostBookmark {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  post      Post        @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String      @db.ObjectId
  user      UserProfile @relation(fields: [userId], references: [id])
  userId    String      @db.ObjectId
  createdAt DateTime    @default(now())

  @@unique([postId, userId])
}

/**
 * ============================== ==============================
 * Engagement Models
 * ============================== ==============================
 */

enum ReactionType {
  LIKE
  LOVE
  CLAP
  WOW
  SAD
  ANGRY
}

model Comment {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String @db.ObjectId

  author   UserProfile @relation(fields: [authorId], references: [id])
  authorId String      @db.ObjectId

  parentCommentId String?   @db.ObjectId
  parentComment   Comment?  @relation("CommentToReplies", fields: [parentCommentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies         Comment[] @relation("CommentToReplies")

  content          String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  commentReactions CommentReaction[]

  @@index([postId])
  @@index([authorId])
}

model CommentReaction {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  comment   Comment @relation(fields: [commentId], references: [id], onDelete: NoAction)
  commentId String  @db.ObjectId

  user   UserProfile @relation(fields: [userId], references: [id])
  userId String      @db.ObjectId

  type      ReactionType
  createdAt DateTime     @default(now())

  @@unique([commentId, userId])
  @@index([commentId])
}

model PostReaction {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String @db.ObjectId

  user   UserProfile @relation(fields: [userId], references: [id])
  userId String      @db.ObjectId

  type      ReactionType
  createdAt DateTime     @default(now())

  @@unique([postId, userId])
  @@index([postId])
}

/**
 * ============================== ==============================
 * Contact Model
 * ============================== ==============================
 */
model Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  message   String
  title     String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}
